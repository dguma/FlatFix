{
  "version": 2,
  "builds": [
  { "src": "package.json", "use": "@vercel/static-build", "config": { "outputDirectory": "client/dist" } }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "https://flatfix.onrender.com/api/$1" }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
