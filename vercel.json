{
  "version": 2,
  "builds": [
  { "src": "package.json", "use": "@vercel/static-build", "config": { "outputDirectory": "client/dist" } }
  ],
  "routes": [
  { "src": "/api/(.*)", "dest": "https://flatfix.onrender.com/api/$1" },
  { "handle": "filesystem" },
  { "src": "/(.*)", "dest": "/index.html" }
  ]
}
